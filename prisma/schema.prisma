generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CoffeeChat {
  id                  String   @id @default(cuid())
  title               String
  host                String
  country             String
  city                String
  job                 String
  company             String
  experience          String
  date                String
  time                String
  maxParticipants     Int
  currentParticipants Int      @default(0)
  description         String
  tags                String[]
  status              ChatStatus @default(OPEN)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model AnonymousPost {
  id          String   @id @default(cuid())
  title       String
  content     String
  nickname    String
  password    String   // 해시된 비밀번호
  category    String   @default("일반") // 카테고리 (일반, 취업, 생활, 기타)
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ChatStatus {
  OPEN
  FULL
  COMPLETED
}
